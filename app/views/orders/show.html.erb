<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <table class= "table table-bordered" width="100%">  
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
      </tr>
    <% @total = 0 %>
    <% @order.line_items.each do |line_item| %>    
      <tr>
        <td><%= line_item.product.name %></td>
        <td><%= line_item.product.description %></td>
        <td><%= image_tag(line_item.product.image, :size => "100x100") %></td>
      </tr>  
      <% @total += line_item.total_price_cents %>
    <% end %>
    </table>

    <li>Total number of items ordered: <%= @total_items %></li>
    <li>Your confirmation e-mail has been sent to: <%= current_user.E_mail %></li>
    <li>Total amount: <%= humanized_money_with_symbol @total / 100 %></li>
    
  </div>
  
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
