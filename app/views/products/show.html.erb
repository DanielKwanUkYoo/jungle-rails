<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <%= form_for @review, url: product_reviews_path(@product) do |f| %>
      Leave Review for this product: </br><%= f.text_area :description %></br>
      Rating <%= f.select :rating, [['1'], ['2'], ['3'], ['4'], ['5']] %></br>
      <%= f.submit 'Rate!' %></br>
    <% end %></br>

    <div class="row">
      <table class= "table table-bordered" width="100%">
        <tr>
          <th>Review</th>
          <th>Rating</th>
        </tr>
        <tr>
          <% @product_reviews.each do |review| %>
          <td><%=review.description%></td>
          <td><%=review.rating%></td>
          <% if @user.id == review.user_id %>
            <%= button_to "delete", "/products/#{@product.id}/reviews", :method => :delete, data: {confirm: "are you sure?"} %>
          <% end %>
        <% end %>
        </tr>
      </table>
    </div>
    
  </article>

</section>
